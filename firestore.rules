rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Publicly readable collections
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow write for authenticated users (admins)
    }
    match /blog/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /menu/{itemId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /siteContent/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /settings/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Orders can be created by anyone, but only read/updated by the user who owns them or an admin.
    match /orders/{orderId} {
      allow create: if true; // Allow guests and users to create orders
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin');
      allow update: if request.auth != null; // Allow update for authenticated users (admins)
    }

    // Users can only read their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule: Deny all other access for security
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
