rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // By default, deny all read and write access to the database.
    // This is a security best practice.
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access for products.
    // Writing to this collection should only be done from a trusted server
    // environment (e.g., the admin dashboard), so client-side writes are denied.
    match /products/{productId} {
      allow read: if true;
      allow write: if false;
    }

    // Allow public read access for blog posts.
    // Client-side writes are disabled for security.
    match /blog/{postId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow public read access for events.
    // Client-side writes are disabled for security.
    match /events/{eventId} {
      allow read: if true;
      allow write: if false;
    }

    // Deny all client-side access to the users collection.
    // User data should be managed securely via server-side logic.
    match /users/{userId} {
      allow read, write: if false;
    }
  }
}
